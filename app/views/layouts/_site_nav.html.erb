<div id="site_nav">
  <ul>
    <li class='<%= class_selection(:books) %>' ><%= link_to t(:books), books_path %></li>
    <li>
        <%= listed_categories @site_nav_categories || {} %>
    </li>
    <li class='<%= class_selection(:authors) %>' ><%= link_to t(:authors), authors_path %></li>
    <li class='<%= class_selection(:categories) %>' ><%= link_to t(:categories), categories_path %></li>
    <li class='<%= class_selection(:translations) %>' ><%= link_to t(:translations), translations_path if can? :index, Translation %></li>
  </ul>
</div>
