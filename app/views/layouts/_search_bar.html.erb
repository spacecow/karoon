<div id="search_bar">
  <%= form_for @new_search do |f| %>
    <div id="form">
      <div id="label">
        <%= f.label :keywords, pl(:search,1) %>
      </div>
      <div id="left_content">
        <%= f.text_field :keywords %>
      </div>
      <div id="right_content">
        <%= f.select :category_id, Category.order(:names_depth_cache_en).map{|e| [e.names_depth_cache(get_language),e.id]}, :prompt => pl(:book) %>
        <%= f.submit t(:go) %>
        <%= link_to cart_image, current_cart %>
      </div>
      <div class="clear"></div>
    </div>
  <% end %>
</div>
