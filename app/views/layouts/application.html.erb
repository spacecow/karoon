<!DOCTYPE html>
<html lang="<%= get_html_language.to_s %>">
<head>
  <title>Karoon</title>
  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag 'ie6.css', :media => 'screen, projection' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <% if english? %>
    <%= stylesheet_link_tag 'layout_en', 'books_en', 'carts_en', 'orders_en', 'categories_en' %>
  <% else %>
    <%= stylesheet_link_tag 'layout_ir', 'books_ir', 'carts_ir', 'orders_ir', 'categories_ir' %>
  <% end %>
</head>
<body>

<div id="background_container">
  <div id="container">
    <div id="top_container">
      <div id="image_container">
        <%= link_to image_tag('blue_logo.png'), root_path %>
      </div>
      <div id="user_container">
        <div id="flash_container">
          <% flash.each do |name,msg| %>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <% end %>
          <%= render 'layouts/user_nav' %>
        </div>
        <%= render 'layouts/search_bar' %>
      </div>
    </div>
    <div class="clear"></div>
    <div id="mid_container">
      <div id="site_nav_container">
        <%= render 'layouts/site_nav' %>
      </div>

      <div id="main_container">
        <div id="main">
          <%= yield %>
        </div>
      </div>
    </div>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
</div>

</body>
</html>
