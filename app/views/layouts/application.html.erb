<!DOCTYPE html>
<html>
<head>
  <title>Karoon</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="background_container">
  <div id="container">
    <div id="site_nav_container">
      <div id="site_nav">
        <ul>
          <li <%= class_selection(:books) %> ><%= link_to t(:books), books_path %></li>
          <li>
            <ul>
              <% (@site_nav_categories || []).each do |cat| %>
                <li <%= class_selection(cat.name) %> ><%= link_to cat.name, cat %></li>
              <% end %>
            </ul>
          </li>
          <li <%= class_selection(:authors) %> ><%= link_to t(:authors), authors_path %></li>
          <li <%= class_selection(:categories) %> ><%= link_to t(:categories), categories_path %></li>
        </ul>
      </div>
    </div>

    <div id="main_container">
      <div id="flash_container">
        <% flash.each do |name,msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <div id="user_nav">
          <% if current_user %>
            Logged in as <%= current_user.email %><br>
            <%= link_to t(:logout), logout_path %>
          <% else %>
            <%= link_to t(:login), login_path %>
          <% end %>
          <%= link_to t(:signup), signup_path %>
          <%= link_to t(:settings), edit_setting_path(Setting.singleton) if can? :edit, Setting.singleton %>
        </div>
      </div>

      <div id="main">
        <%= yield %>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>

</body>
</html>
