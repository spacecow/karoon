<%= semantic_form_for @book do |f| %>
  <%= f.input :title, label:ft(:title) %>
  <%= f.input :summary, label:ft(:summary) %>
  <li id="book_regular_price_input">
    <%= f.label :regular_price, ft(:regular_price) %>
    <%= f.text_field :regular_price, {:class => :short} %>
    <p class="inline-hints">
      <%= Setting.in_currency %>
    </p>
    <p class="inline-errors">
      <%= @book.errors[:regular_price].join %>
    </p>
  </li>
  <div class="clear"></div>
  <%= f.input :image, label:ft(:image) %>
  <%= f.input :author_tokens, label:ft(:author), :input_html => {"data-pre" => @book.authors.map(&:attributes).to_json} %>
  <% if english? %>
    <%= f.input :category_tokens_en, label:ft(:category), :input_html => {"data-pre" => @book.categories.map{|e| e.attributes.merge("name" => e.names_depth_cache_en)}.to_json} %>
  <% else %>
    <%= f.input :category_tokens_ir, label:ft(:category), :input_html => {"data-pre" => @book.categories.map{|e| e.attributes.merge("name" => e.names_depth_cache_ir)}.to_json} %>
  <% end %>
  <%= f.submit @book.new_record? ? create(:book) : update(:book), :class => :submit %>
<% end %>
