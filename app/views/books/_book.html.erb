<div class="book">
  <div id="image">
    <% if book.image_url.nil? %>
      <%= link_to image_tag('books-pile.jpg'), book %>
    <% else %>
      <%= link_to image_tag(book.image_url(:thumb)), book %>
    <% end %>
  </div>
  <div id="content">
    <div id="title">
      <span class="title"><%= search_link_to book.title, :book_path, book %></span> by <%= link_to_authors book.authors %>
    </div>
    <div id="categories">
      <span class="label">
        <%= book.categories.count > 1 ? t(:categories) : t(:category) %>:
      </span>
      <span class="content">
        <%= link_to_categories book.categories %>
      </span>
    </div>
    <div id="price">
      <span class="label">
        <%= t(:price) %>:
      </span>
      <span class="content">
        <%= book.price(currency_in_riel?) %> <%= currency %>
      </span>
    </div>
    <%= form_for LineItem.new(:book_id => book.id) do |f| %>
      <div id="quantity">
        <span class="label">
          <%= f.label :quantity %>:
        </span>
        <span class="content">
          <%= f.select :quantity, (1..10) %>
        </span>
      </div>
      <%= f.hidden_field :book_id, :as => :hidden %>
      <%= f.submit add_to(:cart) %>
    <% end %>
    <div id="actions">
      <%= link_to t(:edit), edit_book_path(book) if can? :edit, book %>
      <%= link_to t(:del), book, :confirm => sure?, :method => :delete if can? :destroy, book %>
    </div>
    <div class="clear"></div>
  </div>
</div>
