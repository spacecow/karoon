<table id="translations">
  <tr>
    <th><%= t(:key) %></th>
    <% languages(@translations).each do |lang| %>
      <th><%= t(lang) %></th>
    <% end %>
  </tr>
  <% sorted_unique_suffixes(@translations).each do |suffix| %>
    <tr>
      <td><%= suffix %></td>
      <% languages(@translations).each do |lang| %>
      <td>
        <%= link_to translate_or_skip(suffix,lang,'-'), key: key_value(suffix), value: translate_or_skip(suffix,lang), locale: switch_language_on_locale(suffix,lang) %>
      </td>
      <% end %>
    </tr>
  <% end %>
</table>
