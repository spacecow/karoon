<%= title t(:signup) %>

<%= semantic_form_for @user do |f| %>
  <%= f.input :email, :label => ft(:login), :input_html => {:class => :short} %>
  <%= f.input :password, :input_html => {:class => :short} %>
  <%= f.input :password_confirmation, :label => ft(:confirmation), :input_html => {:class => :short} %>
  <%= f.submit create(:user), :class => :submit %>
<% end %>
