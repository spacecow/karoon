<%= title jt(:signup) %>

<%= semantic_form_for @user do |f| %>
  <%= f.input :userid, label:ft(:userid), :input_html => {:class => :short} %>
  <%= f.input :email, label:ft(:email), :input_html => {:class => :short} %>
  <%= f.input :password, label:ft(:password), :input_html => {:class => :short} %>
  <%= f.input :password_confirmation, label:ft(:confirmation), :input_html => {:class => :short} %>
  <%= f.submit create(:user), :class => :submit %>
<% end %>
