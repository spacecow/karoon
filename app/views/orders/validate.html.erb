<%= title confirm(:order) %>

<%= render 'orders/line_items', :line_items => @order.line_items, :model => @order %>

<%= render @order %>

<%= form_for @order, :url => confirm_order_path(@order), :method => :put, :html=>{:id => 'confirm_order'} do |f| %>
  <%= f.submit t(:cancel), :name => :cancel_button, :class => :submit %>
  <%= f.submit t(:edit), :name => :edit_button, :class => :submit %>
  <%= f.submit t(:confirm), :class => :submit %>
<% end %>
