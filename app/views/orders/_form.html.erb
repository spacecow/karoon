<%= semantic_form_for @order do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :email %>
  <%= f.input :pay_type, :as => :select, :collection => Order::PAYMENT_TYPES, :include_blank => false %>
  <%= f.input :postal_service, :as => :select, :collection => Order::POSTAL_SERVICES %>
  <%= f.submit @order.new_record? ? create(:order) : update(:order), :class => :submit %>
<% end %>
